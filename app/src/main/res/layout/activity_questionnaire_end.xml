<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arkki.QuestionnaireEndActivity"
    android:id="@+id/quizEndLayout"
    android:background="@color/colorAccent">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/quizBackButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:text="@string/valikkoon"
        style="@style/quizButton"/>


<LinearLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="70dp">

    <TextView
        android:id="@+id/congratulationsLabel"
        tools:text="Jippii! vastasit 75% oikein!"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.sackcentury.shinebuttonlib.ShineButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:src="@color/colorPrimaryDark"
        android:id="@+id/starImage"
        app:btn_color="@color/colorPrimary"
        app:btn_fill_color="#FF6666"
        app:allow_random_color="false"
        app:enable_flashing="false"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="0"
        app:shine_animation_duration="3500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:shine_distance_multiple="1.5"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@drawable/ic_star_black_24dp"/>

</LinearLayout>



    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/redeemReward"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="Lunasta palkinto"
            style="@style/quizButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/playAgainQuiz"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Pelaa uudelleen"
            style="@style/quizButton"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>